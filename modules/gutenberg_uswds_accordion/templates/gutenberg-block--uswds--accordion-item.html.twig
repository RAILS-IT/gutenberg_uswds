{#
/**
 * @file
 * Default theme implementation to display an example Gutenberg block server-side.
 *
 * Available variables:
 * - block_name: The Gutenberg block name.
 * - block_content: The content of this block.
 * - block_attributes: The attributes of this block.
 * - attributes: array of HTML attributes populated by modules, intended to
 *   be added to the main container tag of this template.
 *
 * @see template_preprocess_gutenberg_block()
 * @see template_preprocess_gutenberg_block__gutenberg_uswds__image_with_caption()
 *
 * @ingroup themeable
 */
#}
{{ attach_library('gutenberg_uswds_accordion/block-view') }}
{% set accordion_item_id = random() %}
{# Multiselect #}
{% if block_attributes.open %}
  {% set open = 'true' %}
{% else %}
  {% set open = 'false' %}
{% endif %}
<span{{ attributes.addClass('usa-accordion__heading') }}>
  <button
    class="usa-accordion__button"
    aria-expanded="{{ open }}"
    aria-controls="{{ accordion_item_id }}"
  >
    <span class="button_inside">{{ block_attributes.heading }}</span>
  </button>
</span>
<div id="{{ accordion_item_id }}" class="usa-accordion__content usa-prose">
  {{ block_content }}
</div>
